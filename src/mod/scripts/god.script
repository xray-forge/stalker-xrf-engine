function spawn_ammo_in_inv(spawn_item,number,npc)
	printf("%s !", "[DBG_LOG] Spawning ammo");

  if npc==nil then
    npc=db.actor
  end
  if number > 0 then
    return se_respawn.create_ammo(spawn_item,
        npc:position(),
        npc:level_vertex_id(),
        npc:game_vertex_id(),
        npc:id(),
        number)
  end
end

