function spawn_item_in_inv(spawn_item,npc)
  printf("%s !", "[DBG_LOG] Spawning items");

  if npc==nil then
    npc=db.actor
  end

  return alife():create(spawn_item,
      npc:position(),
      npc:level_vertex_id(),
      npc:game_vertex_id(),
      npc:id())
end

