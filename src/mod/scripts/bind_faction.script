local LuaLogger = require("scripts.utils.logging").LuaLogger
local create_ts_class_instance = require("lualib_bundle").__TS__New
local log = create_ts_class_instance(LuaLogger, "bind_faction");

--'******************************************************
--'*	������ ������� �����������.
--'******************************************************
function bind(obj)
	obj:bind_object(faction_binder(obj))
end

class "faction_binder" (object_binder)

function faction_binder:__init(obj) super(obj)
end

function faction_binder:net_spawn(server_object)
	if not object_binder.net_spawn(self, server_object) then
		return false
	end
	--' �������� ������ �� ��������� ��������� ������
	self.faction = alife():object(self.object:id())
	return true
end
function faction_binder:update(delta)
	object_binder.update(self, delta)
	self.faction:update()
end
