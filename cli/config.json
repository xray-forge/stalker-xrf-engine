{
  "locale": "ukr",
  "available_locales": ["eng", "fra", "ger", "ita", "pol", "rus", "spa", "ukr"],
  "resources": {
    "mod_assets_base_folder": "..\\src\\resources\\",
    "mod_assets_override_folders": ["..\\..\\stalker-xrf-resources-extended"],
    "mod_assets_locales": {
      "eng": ["..\\..\\stalker-xrf-resources-locale-eng"],
      "fra": ["..\\..\\stalker-xrf-resources-locale-eng"],
      "ger": ["..\\..\\stalker-xrf-resources-locale-eng"],
      "ita": ["..\\..\\stalker-xrf-resources-locale-eng"],
      "pol": ["..\\..\\stalker-xrf-resources-locale-eng"],
      "rus": ["..\\..\\stalker-xrf-resources-locale-rus"],
      "spa": ["..\\..\\stalker-xrf-resources-locale-eng"],
      "ukr": ["..\\..\\stalker-xrf-resources-locale-ukr"]
    }
  },
  "build": {
    "target": "../target",
    "configs": "../src/engine/configs",
    "scripts": "../src/engine/scripts",
    "translations": "../src/engine/translations",
    "extensions": "../src/engine/extensions",
    "ui": "../src/engine/forms"
  },
  "compression": {
    "xr_compress_path": ".\\bin\\compression\\xrCompress.exe",
    "xrf_cli_path_windows": ".\\bin\\tools\\xrf-cli.exe",
    "xrf_cli_path_unix": ".\\bin\\tools\\xrf-cli"
  },
  "package": {
    "engine": "gold",
    "rootAssets": [
      ".\\bin\\package\\stalker.exe",
      ".\\bin\\package\\fsgame.ltx",
      ".\\bin\\package\\user.ltx"
    ],
    "gamedata": ["lualib_bundle.script", "scripts", "core", "extensions", "lib"]
  },
  "targets": {
    "stalker_game_steam_id": 41700,
    "stalker_game_fallback_path": "Fallback/path/to/Stalker Call of Pripyat",
    "stalker_app_path": "Stalker-COP.exe"
  },
  "repositories": {
    "extended": {
      "url": "https://gitlab.com/xray-forge/stalker-xrf-resources-extended.git",
      "description": "Full base gamedata assets for custom game repacks"
    },
    "locale-eng": {
      "url": "https://gitlab.com/xray-forge/stalker-xrf-resources-locale-en.git",
      "description": "English locale files, mainly game character voices"
    },
    "locale-ukr": {
      "url": "https://gitlab.com/xray-forge/stalker-xrf-resources-locale-ukr.git",
      "description": "Ukrainian locale files, mainly game character voices"
    },
    "locale-rus": {
      "url": "https://gitlab.com/xray-forge/stalker-xrf-resources-locale-ru.git",
      "description": "Russian locale files, mainly game character voices"
    }
  }
}
